{
    "model": {
        "type": "silu",
        "params": {
            "vocab_size": 10000,
            "context_length": 256,
            "d_model": 512,
            "num_layers": 4,
            "num_heads": 16,
            "d_ff": 2048,
            "rope_theta": 10000
        }
    },
    "training": {"iterations": 5000, "batch_size": 256, "eval_steps": 100, "grad_log_steps": 500},
    "optimizer": {
        "type": "adamw",
        "params": {"lr": 1e-2, "betas": [0.9, 0.9], "weight_decay": 0.25},
        "gradient_clipping": {"max_norm": 1.0},
        "lr_schedule": {
            "type": "lr_cosine_schedule",
            "params": {"max_lr": 4e-3, "min_lr": 4e-4, "warmup_steps": 50, "cosine_cycle_steps": 5000}
        }
    },
    "data": {"train_path": "data/tiny_train_tokens.npy", "val_path": "data/tiny_valid_tokens.npy"},
    "checkpoints": {"freq": 512, "load_from": null, "save_dir": "models"},
    "smoke_test": false,
    "device": "cuda",
    "precision": "bf16"
}
