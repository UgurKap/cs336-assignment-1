{
    "model": {
        "type": "standard-rope",
        "params": {
            "vocab_size": 10000,
            "context_length": 256,
            "d_model": 512,
            "num_layers": 4,
            "num_heads": 16,
            "d_ff": 1344,
            "rope_theta": 10000
        }
    },
    "training": {"iterations": 4096, "batch_size": 64, "eval_steps": 100, "grad_log_steps": 500},
    "optimizer": {
        "type": "adamw",
        "params": {"lr": 1e-2, "betas": [0.9, 0.95], "weight_decay": 1e-2},
        "gradient_clipping": {"max_norm": 2.0},
        "lr_schedule": {
            "type": "lr_cosine_schedule_sine_warmup",
            "params": {"max_lr": 5e-3, "min_lr": 1e-4, "warmup_steps": 512, "cosine_cycle_steps": 4096}
        }
    },
    "data": {"train_path": "data/tiny_train_tokens.npy", "val_path": "data/tiny_valid_tokens.npy"},
    "checkpoints": {"freq": 512, "load_from": null, "save_dir": "models"},
    "smoke_test": false,
    "device": "cuda",
    "precision": "bf16"
}
