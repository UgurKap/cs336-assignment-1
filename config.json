{
    "model": {
        "type": "standard-rope",
        "params": {
            "vocab_size": 10000,
            "context_length": 128,
            "d_model": 512,
            "num_layers": 4,
            "num_heads": 12,
            "d_ff": 1400,
            "rope_theta": 10000
        }
    },
    "training": {"iterations": 100, "batch_size": 32, "eval_steps": 10},
    "optimizer": {
        "type": "adamw",
        "params": {"lr": 0.1, "betas": [0.9, 0.95], "weight_decay": 1e-2},
        "gradient_clipping": {"max_norm": 5.0},
        "lr_schedule": {
            "type": "lr_cosine_schedule",
            "params": {"max_lr": 1e-1, "min_lr": 1e-5, "warmup_steps": 25, "cosine_cycle_steps": 75}
        }
    },
    "data": {"train_path": "data/tiny_train_tokens.npy", "val_path": "data/tiny_valid_tokens.npy"},
    "checkpoints": {"freq": 10, "load_from": null, "save_dir": "models"},
    "smoke_test": true,
    "device": "cuda",
    "precision": "bf16"
}
